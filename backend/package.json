{
  "name": "cards-game-backend",
  "version": "1.0.0",
  "main": "server.ts",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "seed": "node --loader ts-node/esm seed.ts",
    "start": "pm2 start dist/server.js --name cards-backend --watch",
    "mongo:clean": "sudo rm -f /tmp/mongodb-27017.sock && sudo pkill mongod || true",
    "mongo": "mongod --dbpath ~/mongodb-data",
    "mongo:stop": "pkill mongod || true",
    "dev": "nodemon --watch src --ext ts --exec node --loader ts-node/esm src/server.ts",
    "build": "tsc"
  },
  "dependencies": {
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^11.2.0",
    "@fastify/static": "^8.3.0",
    "@telegram-apps/init-data-node": "^2.0.10",
    "dotenv": "^17.2.3",
    "fastify": "^5.6.2",
    "jsonwebtoken": "^9.0.3",
    "mongoose": "^9.0.2"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.10",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^25.0.3",
    "nodemon": "^3.1.11",
    "pm2": "^6.0.14",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
