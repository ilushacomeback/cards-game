{
  "name": "cards-game-backend",
  "version": "1.0.0",
  "main": "server.ts",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "seed": "node --loader ts-node/esm seed.ts",
    "mongo:clean": "sudo rm -f /tmp/mongodb-27017.sock && sudo pkill mongod || true",
    "mongo": "mongod --dbpath ~/mongodb-data",
    "mongo:stop": "pkill mongod || true",
    "dev": "nodemon -e ts --exec \"node --loader ts-node/esm --experimental-specifier-resolution=node\" server.ts",
    "build": "tsc -p tsconfig.json"
  },
  "dependencies": {
    "@fastify/cors": "^11.2.0",
    "@fastify/static": "^8.3.0",
    "fastify": "^5.6.2",
    "mongoose": "^9.0.2"
  },
  "devDependencies": {
    "@types/mongoose": "^5.11.97",
    "@types/node": "^25.0.3",
    "nodemon": "^3.1.11",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  }
}
